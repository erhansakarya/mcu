#ifndef __GPIO_DRIVER_H
#define __GPIO_DRIVER_H

#ifdef __cplusplus
 extern "C" {
#endif /* __cplusplus */

#include "stm32f767xx.h"

#include "util.h"

typedef struct{
	uint8_t pinNumber;
	uint8_t pinMode;
	uint8_t pinSpeed;
	uint8_t pinPuPdControl;
	uint8_t pinOpType;
	uint8_t pinAltFuncMode;
}GPIO_config_s;

typedef struct{
	GPIO_TypeDef	*pBaseAddress;
	GPIO_config_s		config;
}GPIO_handle_s;

extern void GPIO_clkCntrl(GPIO_TypeDef *pBaseAddress, UTIL_enableDisable_e enableDisable);

extern void GPIO_init(GPIO_handle_s *GPIO_handle);
extern void GPIO_deInit(GPIO_TypeDef	*pBaseAddress);

extern void GPIO_readPin(void);
extern void GPIO_readPort(void);
extern void GPIO_writePin(void);
extern void GPIO_writePort(void);
extern void GPIO_togglePin(void);

extern void GPIO_irqConfig(void);
extern void GPIO_irqHandler(void);

#endif
