#ifndef __EXTI_DRIVER_H
#define __EXTI_DRIVER_H

#ifdef __cplusplus
 extern "C" {
#endif /* __cplusplus */

#include "stm32f767xx.h"

typedef enum{
	RISING,
	FALLING,
	RISING_FALLING
}EXTI_triggerSelection_e;

typedef struct{
	EXTI_triggerSelection_e 	pinNumber;
}EXTI_config_s;

typedef struct{
	EXTI_TypeDef	*pBaseAddress;
	EXTI_config_s	config;
}EXTI_handle_s;

#endif
