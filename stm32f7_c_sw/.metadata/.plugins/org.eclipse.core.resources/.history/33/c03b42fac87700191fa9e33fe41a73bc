#ifndef __EXTI_DRIVER_H
#define __EXTI_DRIVER_H

#ifdef __cplusplus
 extern "C" {
#endif /* __cplusplus */

#include "stm32f767xx.h"

typedef enum{
	RISING,
	FALLING,
	RISING_FALLING
}EXTI_triggerSelection_e;

typedef struct{
	GPIO_pinNumber_e 	pinNumber;
	GPIO_pinMode_e		pinMode;
	GPIO_pinSpeed_e 	pinSpeed;
	GPIO_pinPuPd_e 		pinPuPd;
	GPIO_pinOutType_e 	pinOutType;
	uint8_t 			pinAltFuncMode;
}GPIO_config_s;

typedef struct{
	EXTI_TypeDef	*pBaseAddress;
	GPIO_config_s	config;
}GPIO_handle_s;

#endif
