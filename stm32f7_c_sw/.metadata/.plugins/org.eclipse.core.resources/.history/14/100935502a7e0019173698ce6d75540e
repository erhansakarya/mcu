#ifndef __SPI_DRIVER_H
#define __SPI_DRIVER_H

#ifdef __cplusplus
 extern "C" {
#endif /* __cplusplus */

#include "stm32f767xx.h"

#include "util.h"

typedef struct{
}SPI_config_s;

typedef struct{
	SPI_TypeDef *pBaseAddress;
	SPI_config_s config;
}SPI_handle_s;

extern void SPI_clkCntrl(GPIO_TypeDef *pBaseAddress, UTIL_enableDisable_e enableDisable);

extern void SPI_init(GPIO_handle_s *GPIO_handle);
extern void SPI_deInit(GPIO_TypeDef *pBaseAddress);

extern void SPI_irqConfig(uint8_t irqNumber, uint8_t irqGrouping, uint8_t irqPriority, UTIL_enableDisable_e enableDisable);
extern void SPI_irqHandler(uint8_t pinNumber);

#endif
